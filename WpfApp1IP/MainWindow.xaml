<Window x:Class="WpfApp1IP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1IP"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1000">
    <Grid>
        <Button Content="Zapisz na pulpit" HorizontalAlignment="Left" Margin="63,466,0,0" VerticalAlignment="Top" Height="103" Width="375" Click="Button_Click_1" FontSize ="35" Background="AliceBlue" BorderBrush="Black" BorderThickness="3"/>
        <Button Content="Dostępne sieci WiFi" HorizontalAlignment="Left" Margin="63,251,0,0" VerticalAlignment="Top" Height="103" Width="375" Click="Button_Click_2" FontSize="35" Background="AliceBlue" BorderBrush="Black" BorderThickness="3"/>
        <Button Content="Tabela Routingu" HorizontalAlignment="Left" Margin="34,55,0,0" VerticalAlignment="Top" Height="86" Width="404" Click="Button_Click_3" FontSize="35" Background="AliceBlue" BorderBrush="Black" BorderThickness="3"/>
        <Label Content="Twoje Ip" HorizontalAlignment="Left" Height="63" Margin="584,532,0,0" VerticalAlignment="Top" Width="364"  FontSize="35" Background="AliceBlue" BorderBrush="Black" BorderThickness="3" Name="ipLabel"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="423" Margin="534,55,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="414"/>


    </Grid>
    <Window.Resources>
        <Style TargetType="Button">
            <Style.Triggers>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property= "RenderTransform">
                        <Setter.Value>
                            <TransformGroup>
                                <ScaleTransform ScaleX="0.99" ScaleY="0.99"/>
                                <TranslateTransform X="2" Y="2"/>
                            </TransformGroup>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="BorderThickness">
                        <Setter.Value>
                            <Thickness Left="2" Right="2" Top="2" Bottom="2"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
</Window>
